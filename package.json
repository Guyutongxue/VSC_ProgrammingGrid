{
    "name": "programming-grid",
    "displayName": "编程网格",
    "description": "北京大学校内 OJ 助手",
    "version": "0.1.10",
    "preview": true,
    "categories": [
        "Other"
    ],
    "publisher": "Guyutongxue",
    "author": "Guyutongxue",
    "repository": {
        "url": "https://github.com/Guyutongxue/VSC_ProgrammingGrid"
    },
    "license": "MIT",
    "keywords": [
        "OJ",
        "C++",
        "cpp",
        "keybindings"
    ],
    "engines": {
        "vscode": "^1.59.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "programming-grid.openProblem",
                "title": "Open Problem"
            },
            {
                "command": "programming-grid.submit",
                "category": "Programming Grid",
                "title": "提交代码",
                "icon": "$(run-above)"
            },
            {
                "command": "programming-grid.run",
                "category": "Programming Grid",
                "title": "本地运行",
                "icon": "$(run)"
            },
            {
                "command": "programming-grid.refresh",
                "category": "Programming Grid",
                "title": "刷新面板",
                "icon": "$(refresh)"
            },
            {
                "command": "programming-grid.setCourseId",
                "category": "Programming Grid",
                "title": "设置课程",
                "icon": "$(edit)"
            },
            {
                "command": "programming-grid.setUser",
                "category": "Programming Grid",
                "title": "设置用户",
                "icon": "$(edit)"
            }
        ],
        "configuration": [
            {
                "title": "编程网格",
                "properties": {
                    "programming-grid.info.username": {
                        "type": "string",
                        "description": "登录到北大个人门户的学号。",
                        "default": ""
                    },
                    "programming-grid.info.password": {
                        "type": "string",
                        "description": "登录到北大个人门户的密码。扩展只会将此密码发送给 IAAA 身份验证服务器。",
                        "default": ""
                    },
                    "programming-grid.info.courseId": {
                        "type": "string",
                        "pattern": "^([0-9a-f]{32})|",
                        "description": "当前选修的课程 ID。",
                        "default": ""
                    },
                    "programming-grid.hideClosedProblems": {
                        "type": "boolean",
                        "default": true,
                        "description": "选中后，已经截止或尚未开始的题集将不会出现在题目列表中。"
                    },
                    "programming-grid.colorTheme": {
                        "type": "string",
                        "enum": [
                            "luogu",
                            "pku"
                        ],
                        "default": "luogu",
                        "description": "设置提交结果颜色主题。"
                    },
                    "programming-grid.terminalCommand": {
                        "type": "string",
                        "default": "",
                        "markdownDescription": "仅 Linux 系统：设置如何启动终端模拟器。用 `$cmd` 代表启动时执行的命令，用 `$args` 代表执行该命令时传入的参数。例：`gnome-terminal -- $cmd $args`。若留空，则工具将尝试自动设置。"
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "programming-grid",
                    "title": "编程网格",
                    "icon": "assets/icon.svg"
                }
            ]
        },
        "views": {
            "programming-grid": [
                {
                    "id": "pgInfo",
                    "name": "信息",
                    "visibility": "collapsed"
                },
                {
                    "id": "pgProblems",
                    "name": "题目"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "programming-grid.refresh",
                    "when": "view == pgProblems",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "programming-grid.setUser",
                    "when": "view == pgInfo && viewItem == username",
                    "group": "inline"
                },
                {
                    "command": "programming-grid.setCourseId",
                    "when": "view == pgInfo && viewItem == courseId",
                    "group": "inline"
                }
            ],
            "editor/title": [
                {
                    "command": "programming-grid.run",
                    "when": "resourcePath in programming-grid.editorFile",
                    "group": "navigation"
                },
                {
                    "command": "programming-grid.submit",
                    "when": "resourcePath in programming-grid.editorFile",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "programming-grid.openProblem",
                    "when": "false"
                }
            ]
        },
        "keybindings": [
            {
                "key": "f7",
                "command": "programming-grid.run",
                "when": "resourcePath in programming-grid.editorFile"
            },
            {
                "key": "ctrl+f7",
                "mac": "cmd+f7",
                "command": "programming-grid.submit",
                "when": "resourcePath in programming-grid.editorFile"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@popperjs/core": "^2.9.3",
        "@types/command-exists": "^1.2.0",
        "@types/glob": "^7.1.3",
        "@types/mime": "^2.0.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/node-fetch": "^2.5.12",
        "@types/vscode": "^1.59.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "ts-loader": "^9.2.5",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "webpack": "^5.51.1",
        "webpack-cli": "^4.8.0"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.21",
        "bootstrap": "^5.1.0",
        "cheerio": "^1.0.0-rc.10",
        "command-exists": "^1.2.9",
        "gcc-translation": "https://github.com/Guyutongxue/gcc-translation/tarball/19ce0715e40dc3397a5c9d4b33a120ab2ab10ede",
        "fetch-cookie": "^1.0.0",
        "iconv-lite": "^0.6.3",
        "mime": "^2.5.2",
        "node-fetch": "^2.6.1"
    }
}
